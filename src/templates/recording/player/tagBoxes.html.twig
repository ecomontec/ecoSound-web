{% for key,tag in tags %}
    <div class="tag-controls {{ tag.style }}" id="{{ tag.id }}" style="z-index: {{ tag.position }}; border-color: {{ tag.color }}; left: {{ tag.left }}px; top: {{ tag.top }}px; height: {{ tag.height }}px; width: {{ tag.width }}px; {{ show_tags ? '' : 'display:none;' }}"></div>
    <div class="card js-panel-tag" style="display:none;">
        <div class="card-header">
            <small>{{ tag.id }} | {{ tag.title?tag.title:tag.soundType?tag.soundType:tag.soundscapeComponent }}</small>
        </div>
        <div class="card-body mx-auto">
            <div class="btn-group" role="group">
                <a href="{{ baseUrl }}/api/tag/edit/{{ tag.id }}{{ type?'?type='~type:'' }}" id="tag_{{ tag.id }}" class='btn btn-outline-primary btn-sm js-tag'
                   title='Edit tag'>
                    <i class='fas fa-edit' aria-hidden='true'></i>
                </a>

                <a href='#' onclick='return false;' class='btn btn-outline-primary btn-sm zoom-tag' title='Zoom tag(+Alt: open in new tab)'>
                    <i class='fas fa-search' aria-hidden='true'></i>
                </a>
                {% if tag.soundscapeComponent == "biophony" and tag.public %}
                    <a href='#' onclick='return false;' id="est_{{ tag.id }}" type='button'
                       class='btn btn-outline-primary btn-sm estimate-distance' title='Estimate call distance'>
                        <i class='fas fa-bullhorn' aria-hidden='true'></i>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
